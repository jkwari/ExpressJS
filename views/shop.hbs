<main>
    {{!-- In order to use our logic from node it is little bit different from pug here we want to minimize the logic code and keep the templete clean.  --}}
    {{#if numberOfProducts}}
        <div class="grid">
            {{#each prods}}
                <article class="card product-item">
                    <header class="card__header">
                        {{!-- We can use this object were it holds the current object --}}
                        <h1 class="product__title">{{this.title}}</h1>
                    </header>
                    <div class="card__image">
                        <img src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png" alt="A Book">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">{{this.price}}</h2>
                        <p class="product__description">{{this.description}}</p>
                    </div>
                    <div class="card__actions">
                        <button class="btn">Add to Cart</button>
                    </div>
                </article>
            {{/each}}
        </div> 
        {{else}}
            <h1>No Products to show</h1>
        {{/if}}
        
    </main>
